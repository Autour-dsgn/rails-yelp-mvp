<div class="container d-flex justify-content-between align-items-center">
  <h1><strong><%= @restaurant.name %></strong></h1>
  <%= link_to 'See all restaurants', restaurants_path, class: "btn btn-primary" %>
</div>
<div class="container my-5">
  <div class="card-trip">
    <p>Address: <%= @restaurant.address %></p>
    <p>Phone number: <%= @restaurant.phone_number %></p>
    <p><strong><%= @restaurant.category %></strong><p>
    <br>
    <%= link_to 'Write a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
  </div>
</div>

<div class="container">
  <h4><strong>Reviews</strong></h4>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <% @restaurant.reviews.each do |review| %>
    </div>
    <div class="col">
      <p>Rating:<strong> <%= review.rating %> / 5</strong></p>
    </div>
  </div>
	<% end %>
</div>
